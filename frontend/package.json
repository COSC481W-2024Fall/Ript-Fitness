{
  "name": "ript",
  "version": "1.0.0",
  "main": "expo/AppEntry.js",
  "scripts": {
    "start": "node setup-env.js && npx expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "test": "jest"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.3",
    "@react-navigation/bottom-tabs": "^6.6.1",
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.11.0",
    "@react-navigation/stack": "^6.4.1",
    "expo-font": "~12.0.10",
    "expo-haptics": "~13.0.1",
    "expo-network": "~6.0.1",
    "expo-status-bar": "~1.12.1",
    "react": "18.2.0",
    "react-native": "0.74.5",
    "react-native-dotenv": "^3.4.11",
    "react-native-draggable-flatlist": "^4.0.1",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-vector-icons": "^10.2.0"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "@testing-library/jest-native/extend-expect",
      "./jest.setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@expo|expo-font|expo-modules-core|react-native|@react-navigation|react-native-reanimated|@react-native|@testing-library)/)"
    ],
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-typescript": "^7.25.7",
    "@testing-library/jest-native": "^5.3.0",
    "@testing-library/react-native": "^12.6.0",
    "@types/expo": "^32.0.13",
    "@types/jest": "^29.5.13",
    "@types/react": "~18.2.45",
    "expo": "^51.0.38",
    "jest": "^29.7.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^29.2.5",
    "typescript": "~5.3.3"
  },
  "private": true
}
